<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CoffeeDetail">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginTop="30dp"
            android:padding="30dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/coffee_image"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"
                />
            <TextView
                android:id="@+id/coffee_name"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?attr/textAppearanceHeadline5"
                tools:text="Coffee Title"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/coffee_longdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="35dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:justificationMode="inter_word"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus sed egestas augue, ut consequat dui.
        Integer sit amet nunc eget velit porta fringilla"
            />
    </LinearLayout>
</FrameLayout>