<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CoffeeDetails">

    <!-- TODO: Update blank fragment layout -->
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginTop="10dp"
            android:padding="30dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/coffee_image"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/__espresso"
                />
            <TextView
                android:id="@+id/coffee_name"
                android:gravity="center"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?attr/textAppearanceHeadline6"
                tools:text="Coffee Title"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/coffee_longdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="35dp"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:justificationMode="inter_word"
            android:letterSpacing="0.04"
            android:lineSpacingExtra="2dp"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus sed egestas augue, ut consequat dui.
        Integer sit amet nunc eget velit porta fringilla"
            />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="20dp"
        app:maxImageSize="28dp"
        app:srcCompat="@drawable/ic_favorite"  />

</FrameLayout>